<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- 1) Cargamos la librerÃ­a QZ Tray desde archivo local -->
        <record id="pos_qztray_printer.ir_asset_qz_tray" model="ir.asset">
            <field name="name">QZ Tray Script</field>
            <field name="bundle">web.assets_backend</field> <!-- Usamos bundle para el backend -->
            <field name="active" eval="True"/>
            <field name="sequence" eval="10"/>
            <field name="path">/pos_qztray_printer/static/src/js/qz-tray.js</field> <!-- Ruta local -->
        </record>

        <!-- 2) Nuestro widget JS para el backend -->
        <record id="pos_qztray_printer.ir_asset_printer_widget" model="ir.asset">
            <field name="name">QZ Printer Widget</field>
            <field name="bundle">web.assets_backend</field>
            <field name="active" eval="True"/>
            <field name="sequence" eval="20"/>
            <field name="path">/pos_qztray_printer/static/src/js/qz_printer_widget.js</field> <!-- Ruta local -->
        </record>

    </data>
</odoo>
