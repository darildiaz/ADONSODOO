<odoo>
    <record id="view_pos_config_form" model="ir.ui.view">
        <field name="name">pos.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_config_form"/>
        <field name="arch" type="xml">
            <!-- Aquí agregamos el campo de selección para la impresora QZ Tray -->
            <field name="printer_type" position="after">
                <!-- Campo dropdown que se llenará dinámicamente con las impresoras QZ Tray -->
                <field name="qz_printer_name"
                       widget="qz_printer_selection"
                       invisible="printer_type != 'qz_tray'"
                       string="Impresora QZ Tray" />
            </field>

            <!-- Opcional: Puedes agregar un botón para actualizar la lista de impresoras -->
            <button name="action_refresh_printers" string="Actualizar impresoras" type="object"
                    class="btn btn-secondary" invisible="printer_type != 'qz_tray'"/>
        </field>
    </record>
</odoo>
