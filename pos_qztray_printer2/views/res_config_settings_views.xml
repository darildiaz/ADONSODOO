<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_qztray" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos.qztray.printer</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/group" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="pos_qztray_div">
                    <div class="o_setting_left_pane">
                        <field name="pos_use_qztray"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="pos_use_qztray" string="QZ Tray Printing"/>
                        <div class="text-muted">
                            Use QZ Tray for receipt printing instead of IoT Box
                        </div>
                        <div class="content-group mt16" attrs="{'invisible': [('pos_use_qztray', '=', False)]}">
                            <div class="row">
                                <label string="QZ Tray Server URL" for="pos_qztray_server_url" class="col-lg-4 o_light_label"/>
                                <field name="pos_qztray_server_url" placeholder="http://localhost:8182"/>
                            </div>
                            <div class="row">
                                <label string="Authentication Token" for="pos_qztray_auth_token" class="col-lg-4 o_light_label"/>
                                <field name="pos_qztray_auth_token"/>
                            </div>
                            <div class="row">
                                <label string="QZ Tray Certificate" for="pos_qztray_certificate" class="col-lg-4 o_light_label"/>
                                <field name="pos_qztray_certificate" widget="text"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div role="alert" class="alert alert-warning" attrs="{'invisible': ['|', ('pos_use_qztray', '=', False), ('pos_iface_print_via_proxy', '=', False)]}">
                    QZ Tray will be used instead of the receipt printer connected to the IoT Box.
                </div>
            </xpath>
        </field>
    </record>
</odoo>