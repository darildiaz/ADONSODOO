<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Define QZ Tray printer templates for common receipt types -->
        <record id="qztray_kitchen_receipt_template" model="ir.qweb">
            <field name="name">pos_qztray_printer.kitchen_receipt_template</field>
            <field name="key">pos_qztray_printer.kitchen_receipt_template</field>
            <field name="type">qweb</field>
            <field name="arch" type="xml">
                <t t-name="pos_qztray_printer.kitchen_receipt_template">
                    <receipt align='center' width='40'>
                        <h1><t t-esc="receipt.name" /></h1>
                        <t t-if="receipt.table">
                            <h2>Table: <t t-esc="receipt.table" /></h2>
                        </t>
                        <t t-if="receipt.floor">
                            <h2>Floor: <t t-esc="receipt.floor" /></h2>
                        </t>
                        <div line='true'>-------------------------</div>
                        <t t-foreach="receipt.orderlines" t-as="line">
                            <h3><t t-esc="line.quantity" /> <t t-esc="line.product_name" /></h3>
                            <t t-if="line.note">
                                <div indent='1'>NOTE: <t t-esc="line.note" /></div>
                            </t>
                        </t>
                        <div line='true'>-------------------------</div>
                        <div><t t-esc="receipt.date.localestring" /></div>
                    </receipt>
                </t>
            </field>
        </record>
    </data>
</odoo>